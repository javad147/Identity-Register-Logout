@{
    ViewData["Title"] = "Admin Panel";
    Layout = "~/Views/Shared/admin-layout.cshtml";
}

<h2>Admin Panel</h2>
<div class="card-deck">
    <div class="card text-white bg-primary mb-3">
        <div class="card-body">
            <h5 class="card-title">Products</h5>
            <p class="card-text">Manage your products here.</p>
            <a href="@Url.Action("Products", "Admin")" class="btn btn-light">Manage Products</a>
        </div>
    </div>
    <div class="card text-white bg-success mb-3">
        <div class="card-body">
            <h5 class="card-title">Categories</h5>
            <p class="card-text">Manage your categories here.</p>
            <a href="@Url.Action("Categories", "Admin")" class="btn btn-light">Manage Categories</a>
        </div>
    </div>
    <div class="card text-white bg-warning mb-3">
        <div class="card-body">
            <h5 class="card-title">Product Images</h5>
            <p class="card-text">Manage your product images here.</p>
            <a href="@Url.Action("ProductImages", "Admin")" class="btn btn-light">Manage Product Images</a>
        </div>
    </div>
</div>
