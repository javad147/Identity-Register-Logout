@model IEnumerable<WebApplication1.Models.ProductImage>

@{
    ViewData["Title"] = "Manage Product Images";
    Layout = "~/Views/Shared/admin-layout.cshtml";
}

<h2>Product Images</h2>
<p>
    <a href="@Url.Action("Create", "ProductImages")" class="btn btn-primary">Add New Image</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Product</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ImageUrl" alt="@item.Product.Name" width="100"></td>
                <td>@item.Product.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "ProductImages", new { id = item.Id })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "ProductImages", new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
                    <a href="@Url.Action("Details", "ProductImages", new { id = item.Id })" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
