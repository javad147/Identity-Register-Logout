@model IEnumerable<WebApplication1.Models.Product>

@{
    Layout = "~/Views/Shared/admin-layout.cshtml";
}

<h2>Products</h2>
<p>
    <a href="/Products/Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td>
                    <a href="/Products/Edit/@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Products/Delete/@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    <a href="/Products/Details/@item.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

